{
  "private": true,
  "name": "preact-simple",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "prebuild": "rm -Rf build/*",
    "build": "NODE_ENV=production preact build --no-sw --no-esm --prerenderUrls ./prerender-urls.js",
    "analyze": "preact build --no-sw --analyze",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "preact watch --port 3000 --no-sw --prerenderUrls ./prerender-urls.js",
    "lint": "eslint src tailwind.config.js preact.config.js prerender-urls.js content",
    "test": "jest",
    "format": "prettier --write \"src/**/*.js\" \"tailwind.config.js\" \"preact.config.js\" \"prerender-urls.js\" \"content/**/*.js\""
  },
  "babelMacros": {
    "twin": {
      "preset": "goober"
    }
  },
  "eslintConfig": {
    "plugins": [
      "prettier"
    ],
    "extends": [
      "prettier",
      "eslint:recommended",
      "preact"
    ],
    "ignorePatterns": [
      "build/"
    ],
    "rules": {
      "prettier/prettier": "warn"
    }
  },
  "devDependencies": {
    "babel-plugin-transform-goober": "^1.2.0",
    "copy-webpack-plugin": "^6.4.1",
    "eslint": "^7.18.0",
    "eslint-config-preact": "^1.1.3",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "jest-preset-preact": "^4.0.2",
    "mkdirp": "^1.0.4",
    "preact-cli": "^3.0.5",
    "preact-cli-goober-ssr": "^1.0.1",
    "prettier": "^2.2.1",
    "responsive-loader": "^2.3.0",
    "rimraf": "^3.0.2",
    "sharp": "^0.27.0",
    "sirv-cli": "1.0.10",
    "svgo": "^1.3.2"
  },
  "dependencies": {
    "@babel/core": "^7.12.10",
    "@fortawesome/fontawesome-free-solid": "^5.0.13",
    "@preact/prerender-data-provider": "^3.0.1",
    "babel-plugin-macros": "^3.0.1",
    "goober": "^2.0.26",
    "markdown-to-jsx": "^7.1.1",
    "preact": "^10.5.10",
    "preact-render-to-string": "^5.1.12",
    "preact-router": "^3.2.1",
    "tailwindcss": "^2.0.2",
    "twin.macro": "^2.1.0"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  }
}
